#!/bin/bash

if [ $# -lt 1 ]; then
	echo 'usage: update-mo woocommerce'
	echo 'usage: update-mo woocommerce admin'
exit
fi

PLUGIN_DIR=`pwd`/..

cd $PLUGIN_DIR

PROJECT_SLUG=$1
PROJECT_SUB_SLUG=$2

if [[ $PROJECT_SUB_SLUG ]]; then
	FILE=languages/$PROJECT_SLUG/$PROJECT_SUB_SLUG-nl_NL
else 
	FILE=languages/$PROJECT_SLUG/nl_NL
fi

PO_FILE=$FILE.po
MO_FILE=$FILE.mo

msgfmt $PO_FILE -o $MO_FILE
