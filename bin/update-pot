#!/bin/bash

if [ $# -lt 1 ]; then
	echo 'usage: update-pot woocommerce'
exit
fi

PLUGIN_DIR=`pwd`/..

if [[ $2 ]]; then
	TRANSLATE_DIR=$2
else 
	TRANSLATE_DIR=../$PLUGIN_DIR
fi

PLUGIN_DIR_NAME=$1

cd $PLUGIN_DIR

cd $TRANSLATE_DIR && \
	find ./admin -iname "*.php" -type f | xgettext \
	--from-code=UTF-8 \
	--keyword=__ \
	--keyword=_e \
	--keyword=_n:1,2 \
	--keyword=_x:1,2c \
	--keyword=_ex:1,2c \
	--keyword=_nx:1,2,4c \
	--default-domain=woocommerce \
	--language=PHP \
	--copyright-holder="Pronamic" \
	--msgid-bugs-address="Pronamic <info@pronamic.nl>" \
	--files-from=- \
	--output=$PLUGIN_DIR/languages/$PLUGIN_DIR_NAME/$PLUGIN_DIR_NAME-admin.pot

cd $TRANSLATE_DIR && \
	find . -iname "*.php" -type f -not -path "./admin/*" | xgettext \
	--from-code=UTF-8 \
	--keyword=__ \
	--keyword=_e \
	--keyword=_n:1,2 \
	--keyword=_x:1,2c \
	--keyword=_ex:1,2c \
	--keyword=_nx:1,2,4c \
	--default-domain=woocommerce \
	--language=PHP \
	--copyright-holder="Remco Tolsma" \
	--msgid-bugs-address="Remco Tolsma &lt;info@remcotolsma.nl&gt;" \
	--files-from=- \
	--output=$PLUGIN_DIR/languages/$PLUGIN_DIR_NAME/$PLUGIN_DIR_NAME.pot
